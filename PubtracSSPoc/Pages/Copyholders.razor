@page "/Copyholders"
@using PubtracSSPoc.Data
@inject CopyholderService copyholderService

<NavLink class="nav-link" href="AddCopyholder">
    <span class="oi oi-plus" aria-hidden="true">Add New</span>

</NavLink>

<h1>Copyholder Info</h1>
@if (EmpObj is null)
{
    <p><em>Loading... !</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Station</th>
                <th>Address 1</th>
                <th>Address 2</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Company</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Remarks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in EmpObj)
            {
            <tr>
                <td>@emp.UserId</td>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.Station</td>
                <td>@emp.Address1</td>
                <td>@emp.Address2</td>
                <td>@emp.City</td>
                <td>@emp.State</td>
                <td>@emp.Zip</td>
                <td>@emp.Company</td>
                <td>@emp.Phone</td>
                <td>@emp.Email</td>
                <td>@emp.Remarks</td>
                <td>
                    <a class="nav-link" href="EditCopyholder/@emp.Id">
                        <span class="oi oi-pencil" aria-hidden="true">Edit</span>
                    </a>
                    <a class="nav-link" href="Delete/@emp.Id">
                        <span class="oi oi-trash" aria-hidden="true">Delete</span>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}


@code {
    List<Copyholder> EmpObj;
    protected override async Task OnInitializedAsync()
    {
        EmpObj = await Task.Run(() => copyholderService.GetAllCopyholdersAsync());
    }
}